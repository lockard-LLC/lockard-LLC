# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Environment
NODE_ENV=development

# Website Configuration
SITE_URL=https://lockard.llc
DOCS_URL=https://docs.lockard.llc
APP_URL=https://app.vibestudio.online

# Admin Configuration
ADMIN_EMAIL=hello@lockard.llc
SUPPORT_EMAIL=support@vibestudio.online

# External Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Security
ALLOWED_ORIGINS=https://lockard.llc,https://docs.lockard.llc,http://localhost:8000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REMOTE_CONFIG=true
ENABLE_A_B_TESTING=false
ENABLE_ADMIN_PANEL=false

# WhatsApp/Claude Integration (Future)
WHATSAPP_API_KEY=your_whatsapp_api_key
CLAUDE_API_KEY=your_claude_api_key
WEBHOOK_SECRET=your_webhook_secret