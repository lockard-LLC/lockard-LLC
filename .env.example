# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Services
FIREBASE_DATABASE_NAME=your_database_name
FIREBASE_STORAGE_BUCKET_URL=gs://your_project.firebasestorage.app

# Environment
NODE_ENV=development

# Website Configuration
SITE_URL=https://your-domain.com
DOCS_URL=https://docs.your-domain.com
APP_URL=https://app.your-domain.com

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# External Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Security
ALLOWED_ORIGINS=https://your-domain.com,https://docs.your-domain.com,http://localhost:8000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REMOTE_CONFIG=true
ENABLE_A_B_TESTING=false
ENABLE_ADMIN_PANEL=false
ENABLE_FIRESTORE=true
ENABLE_STORAGE=true
ENABLE_REALTIME_ANALYTICS=true

# WhatsApp/Claude Integration (Future)
WHATSAPP_API_KEY=your_whatsapp_api_key
CLAUDE_API_KEY=your_claude_api_key
WEBHOOK_SECRET=your_webhook_secret