{
  "hosting": [
    {
      "site": "lockard-llc-business",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "!/.well-known/**",
        "**/node_modules/**",
        "docs/**",
        "examples/**",
        ".env*",
        "README.md",
        "functions/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=7200"
            }
          ]
        },
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3600"
            }
          ]
        }
      ]
    },
    {
      "site": "lockard-llc-safepaws",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        ".env*",
        "README.md",
        "functions/**",
        "index.html",
        "docs/**",
        "package.json",
        "yarn.lock",
        "lockard-LLC.github.io.code-workspace",
        "AGENTS.md",
        "SECURITY_SETUP.md",
        "sitemap.xml",
        "firebase-debug.log"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/safepaws/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=7200"
            }
          ]
        },
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3600"
            }
          ]
        }
      ]
    },
    {
      "site": "lockard-llc-docs",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        ".env*",
        "README.md",
        "functions/**",
        "index.html",
        "safepaws/**",
        "package.json",
        "yarn.lock",
        "lockard-LLC.github.io.code-workspace",
        "AGENTS.md",
        "SECURITY_SETUP.md",
        "sitemap.xml",
        "firebase-debug.log"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/docs/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=7200"
            }
          ]
        },
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3600"
            }
          ]
        }
      ]
    }
  ],
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "remoteconfig": {
    "template": "firebase/remoteconfig.json"
  },
  "firestore": {
    "database": "lockard-db",
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "ai": {
    "rules": "firebase/ai.rules"
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
